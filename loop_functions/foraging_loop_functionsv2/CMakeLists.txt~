link_directories(${CMAKE_BINARY_DIR}/controllers/footbot_foraging)
set(foraging_loop_functionsv2_SOURCES foraging_loop_functionsv2.cpp)

if(ARGOS_COMPILE_QTOPENGL)
  set(foraging_loop_functionsv2_SOURCES
    ${foraging_loop_functionsv2_SOURCES}
    foraging_qt_user_functions.cpp)
endif(ARGOS_COMPILE_QTOPENGL)

add_library(foraging_loop_functionsv2 MODULE ${foraging_loop_functions_SOURCESv2})
target_link_libraries(foraging_loop_functionsv2
  footbot_foraging
  argos3core_simulator
  argos3plugin_simulator_dynamics2d
  argos3plugin_simulator_entities
  argos3plugin_simulator_footbot
  argos3plugin_simulator_genericrobot
  argos3plugin_simulator_media)

if(ARGOS_COMPILE_QTOPENGL)
  target_link_libraries(foraging_loop_functionsv2 argos3plugin_simulator_qtopengl)
endif(ARGOS_COMPILE_QTOPENGL)
